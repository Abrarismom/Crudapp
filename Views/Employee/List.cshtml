@{
}
@model List<Crudapp.Models.Entities.Employees>
<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th> Id</th>
            <th> Name</th>
            <th> Email</th>
            <th> Phone</th>
            <th> Department</th>
            <th> Designation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Phone</td>
                <td>@employee.DepartmentId</td>
                <td>@employee.DesignationId</td>
                <td><a>Edit</a></td>
            </tr>
        }
        
    </tbody>
</table>